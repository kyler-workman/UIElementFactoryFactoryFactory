<UserControl x:Class="FactoryWYSIWYG.CSElements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactoryWYSIWYG"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Height="500">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Button.Height" Value="75"/>
                <Setter Property="Button.Width" Value ="200"/>
                <Setter Property="Button.Margin" Value="3 2 3 2"/>
                <Setter Property="Button.Padding" Value="10"/>
                <Setter Property="Button.FontSize" Value="25"/>
                <Setter Property="Button.Background" Value="Cyan"/>
                <Setter Property="Button.Foreground" Value="FireBrick"/>
            </Style>
        </StackPanel.Resources>
        <Label x:Name ="ItemSelected" Content=" "/>
        <Button Name = "Button" Content="Button" Click="Button_Click"/>
        <Button Name = "TextBox" Content="TextBox" Click="Button_Click"/>
    </StackPanel>
</UserControl>
